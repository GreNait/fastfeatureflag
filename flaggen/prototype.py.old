from typing import Any


class TheDecorator:
    bla: list = []

    def __init__(self, func, bla):
        TheDecorator.bla.append(bla)
        self.func = func

    def __call__(self, *args: Any, **kwargs: Any) -> Any:
        print(TheDecorator.bla)
        return self.func(*args, **kwargs)


def the_decorator(bla):
    def wrapper(func):
        return TheDecorator(func, bla)

    return wrapper


@the_decorator(bla="test")
def blub():
    print("hello")


@the_decorator(bla="blabla")
def blub_2():
    print("blub_2")


if __name__ == "__main__":
    blub()
    blub_2()
